<?xml version="1.0"?>
<page xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance" 
           xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">

           <body>

            <referenceContainer name="product.info.main">

                <block class="Magento\Catalog\Block\Product\View\Description" name="product.info.sample_attribute"

                  template="Magento_Catalog::product/view/attribute.phtml" after="product.info.add_to_wishlist">

                    <arguments>

                        <argument name="at_call" xsi:type="string">getSampleAttribute</argument>

                        <argument name="at_code" xsi:type="string">sample_attribute</argument>

                        <argument name="css_class" xsi:type="string">sample_attribute</argument>

                        <argument name="at_label" xsi:type="string">Sample Attribute</argument>

                        <argument name="add_attribute" xsi:type="string">itemprop="sample_attribute"</argument>

                    </arguments>

                </block>

            </referenceContainer>

        </body>

</page>